<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="fragment.DoanhThuFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="20dp">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnTuNgay"
            android:layout_weight="1"
            android:text="Từ ngày"></Button>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/edTuNgay"
            android:layout_weight="2"
            android:hint="yyyy-MM-DD"
            android:textSize="18dp"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="20dp">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnDenNgay"
            android:layout_weight="1"
            android:text="Đến ngày"></Button>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/edDenNgay"
            android:layout_weight="2"
            android:hint="yyyy-MM-DD"
            android:textSize="18dp"></EditText>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDoanhThu"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="Doanh thu"></Button>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doanh Thu"
        android:layout_marginTop="10dp"
        android:id="@+id/tv_DoanhThu"
        android:layout_gravity="center"
        android:textSize="20sp"></TextView>
</LinearLayout>